@model POSApplication.Models.GeneralAccount

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">Create General Accounts</h5>
    </div>
    <div class="panel-body">





        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @*<h4>GeneralAccount</h4>
                    <hr />*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" id="Message" value="@ViewBag.Message">

                <div class="row" style="padding-left: 60px;">
                    <div class="col-lg-6">
                        <div class="form-group form-group-xs">
                            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", @Value = @DateTime.Now.ToShortDateString() } })*@
                                @Html.TextBox("Date", "", new { @class = "form-control datepicker", @Value = @DateTime.Now.ToShortDateString() })
                                @*@Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group form-group-xs">
                            @Html.Label("Type", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @*@Html.EditorFor(model => model.ExpenseTypeId, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.DropDownList("ExpenseTypeId", null, "--Select--", htmlAttributes: new { @id = "ExpenseTypeId", @class = "form-control select2 input-xs", required = "required" })
                                @Html.ValidationMessageFor(model => model.ExpenseTypeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" style="padding-top: 15px; padding-left: 60px;">
                    <div class="col-lg-6">
                        <div class="form-group form-group-xs">
                            @Html.Label("Pay Over", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.PayOver, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.PayOver, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group form-group-xs">
                            @Html.Label("Payment Amount", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.CashPayment, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CashPayment, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" style="padding-top: 0px; padding-left: 60px;">
                    <div class="col-lg-6">
                        <div class="form-group form-group-xs">
                            @Html.Label("Pay To", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.PayTo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PayTo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                

                

                

                

                

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <br/>
                        <br />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        @*<div>
                @Html.ActionLink("Back to List", "Index")
            </div>*@


    </div> <!-- panel body -->
</div>



@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>  
<link href="~/Content/plugins/select2/select2.min.css" rel="stylesheet" />
<script src="~/Content/plugins/select2/select2.min.js"></script>

<script>
    $(document).ready(function () {

        

        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            todayHighlight: true,
            todayBtn: true,
            autoclose: true
        });

        $(".select2").select2();

        var message = $("#Message").val();

        if (message != "") {
            Swal.fire({
                position: 'top',
                icon: 'success',
                title: 'Successfully Saved!',
                showConfirmButton: true,
            }).then((result) => {
                if (result.value) {
                    window.location = "/GeneralAccounts/Index";
                }
            })
        }
    });


    //-----Expense Type On Change-----//

    $("#ExpenseTypeId").on('change', function () {
        var expensetypeid = $('#ExpenseTypeId').val();

        //alert(expensetypeid);

        $.ajax({
            url: "/GeneralAccounts/GetPayOver",
            type: "POST",
            dataType: 'json',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: {
                expensetypeid: expensetypeid

            },
            success: function (result) {
                console.log(result);
                $('#PayOver').val(result.payover);
                $('#CashPayment').val("");

            

            },
            error: function () {
                alert('Something went wrong!');
            }
        });
    })

</script>
}
