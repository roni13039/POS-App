<script type="text/javascript">
    $(document).ready(function () {
        
    });


    $('#saveState').click(function () {


        if ($.trim($('#Title').val()) === "") {
            alert('Title required');
            $('#Title').focus();
        }

        else if ($.trim($('#Price').val()) === "") {
            alert('Price required');
            $('#Price').focus();
        }
        
        var file = $('#FileUpload1').val();
        if (file == '') {
            alert("Please Upload a Image First");
        }
       
        else {
            SaveUserData();
        }

        

    });



    function SaveUserData() {

        $("#saveState").attr("disabled", "disabled");

        // save Image
        var fileUpload = $("#FileUpload1").get(0);  
        var files = fileUpload.files;  
              
        // Create FormData object  
        var fileData = new FormData();  
  
        // Looping over all files and add it to FormData object  
        for (var i = 0; i < files.length; i++) {  
            fileData.append(files[i].name, files[i]);  
        }  
              
        // Adding one more key to FormData object 
        
      alert("ok");
        
        var Title = $('#Title').val();
        var Price = $('#Price').val();
        var Description = $('#Description').val();

        fileData.append('Title', Title);
        fileData.append('Price', Price);

        fileData.append('Description', Description);

        sliderimage = JSON.stringify({
            Id: 0,
            Title: Title,
            Price: Price,
            Description: Description,
        });


        $.ajax({
         
            contentType: false, // Not to set any content header  
            processData: false, // Not to process data  
            type: 'POST',
            url: '/SliderImages/SaveData',
            data: fileData,
            success: function (result) {
                //console.log(result);
                $("#saveState").removeAttr("disabled");
                if (result.flag == true) {

                    $('#submit').click();
                    

                    Swal.fire({
                        position: 'top',
                        icon: 'success',
                        title: 'Successfully Saved!',
                        showConfirmButton: true,
                    }).then((result) => {
                        if (result.value) {
                            window.location = "/SliderImages/Index";
                        }
                    })

                }
                else {
                    alert(result.message);
                }

            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('Error: ' + textStatus + ' - ' + errorThrown);
                $("#saveState").removeAttr("disabled");
            }
        });

    }



</script>