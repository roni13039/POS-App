@model IEnumerable<POSApplication.Models.Photo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><b> Photos List</b></div>

    <div class="panel-body">

        <p>
            @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-success" })
        </p><br>

        <table id="datatable" class="table table-responsive table-bordered datatable  datatable-show-all">
            <thead>
                <tr class="bg-blue">
                    <th class="col-lg-6">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ImageURL)
                    </th>*@
                    <th class="col-lg-4">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.ImageURL)
                        </td>*@
                        <td>
                            @Html.ActionLink(" ", "Edit", new { Id = item.Id }, new { @class = "btn btn-xs-info  glyphicon glyphicon-pencil", @title = "Edit" })
                            <a class="btn btn-xs labeled btn-danger" title="Delete" href="javascript:deleteFunction(@item.Id)"><i class="glyphicon glyphicon-remove"></i></a>

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section scripts
{
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script>
            //$(".select2").select2();
        $("#datatable").DataTable();





            function deleteFunction(Id) {
                var Con = confirm("are you sure want to delete this ?");
                if (Con == true) {
                    $.ajax({
                        url: "/Photos/DeleteItem",
                        type: "post",
                        data: {
                            Id: Id
                        },
                        dataType: "json",

                        success: function (flag) {
                            console.log(flag);

                            if (flag.flag == true) {
                                Swal.fire({
                                    position: 'top',
                                    icon: 'success',
                                    title: 'Successfully Deleted!',
                                    showConfirmButton: true,
                                }).then((result) => {
                                    if (result.value) {
                                        window.location = "/Photos/Index";

                                    }
                                })
                            }

                            else {
                                alert(flag.message);
                            }
                        },

                        error: function (xhr) {
                            alert('error');

                        }


                    });
                }

            }
    </script>
}

