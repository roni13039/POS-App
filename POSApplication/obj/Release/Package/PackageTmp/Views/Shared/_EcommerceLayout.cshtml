<script type="text/javascript">



    var count = sessionStorage.getItem("Count", count);
    $('#cartItem').text(count);


   function GetCartProduct()
        {
       // get product in seesion
       //sessionStorage.setItem("CartData", "value");
       var cartData = JSON.parse(sessionStorage.getItem("CartData"));//no brackets
       //var cartData = JSON.parse(sessionStorage.getItem("CartData"));


       console.log(cartData);
            // check array null or empty
       if (cartData.length != 0)
            {

                $.ajax({
                    url: "/EccomerceProduct/CartProduct",
                    type: "POST",
                    dataType: 'html',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data:{
                        cartData: cartData

                    },
                    success: function (result)
                    {
                        console.log(result);

                        $('.bodysection').hide();
                        $('.cartAppentItem').html(result);


                    },
                    error: function () {
                        alert('Something went wrong!');
                    }

                });

            }// if end

            };

</script>

