<div class="panel panel-primary panel-bordered">
    <div class="panel-body">
        <div class="form-group">
            <div class="col-md-12">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <button type="button" class="btn btn-success" id="saveState">Save <i class="icon-arrow-right14 position-right"></i></button>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {

    });


    $('#saveState').click(function () {

        if ($.trim($('#CategoryName').val()) === "")
        {
            alert('CategoryName required');
            $('#CategoryName').focus();
            return false;

        }
        else
        {
            SaveUserData();
        }



    });



    function SaveUserData()
    {

        $("#saveState").attr("disabled", "disabled");

        var CategoryName = $('#CategoryName').val();
       var data = {
            Id: 0,
            CategoryName: CategoryName,
        };


        $.ajax({
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            type: 'POST',
            url: '/ProductCategories/SaveData',
            data: data,
            success: function (result)
            {
                //console.log(result);
                $("#saveState").removeAttr("disabled");
                if (result.flag == true)
                {

                    //$('#submit').click();
                    Swal.fire({
                        position: 'top',
                        icon: 'success',
                        title: 'Successfully Saved!',
                        showConfirmButton: true,
                    }).then((result) => {
                        if (result.value) {
                            window.location = "/ProductCategories/Index";
                        }
                    })

                }
                else {
                    alert(result.message);
                }

            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('Error: ' + textStatus + ' - ' + errorThrown);
                $("#saveState").removeAttr("disabled");
            }
        });

    }



</script>